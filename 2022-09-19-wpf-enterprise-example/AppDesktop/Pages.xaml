<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AppDesktop">
    <!-- Mapping from view models to views. -->
    <DataTemplate DataType="{x:Type local:LoginPageVm}">
        <local:LoginPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:HomePageVm}">
        <local:HomePage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:AttendancesSummaryPageVm}">
        <local:AttendancesSummaryPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:EmployeesListPageVm}">
        <local:EmployeesListPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:EmployeesCreatePageVm}">
        <local:EmployeesCreatePage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:RecordsListPageVm}">
        <local:RecordsListPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:RecordsCreatePageVm}">
        <local:RecordsCreatePage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:UsersPasswordChangePageVm}">
        <local:UsersPasswordChangePage />
    </DataTemplate>

    <!-- Dialogs -->
    <DataTemplate DataType="{x:Type local:UsersProfilePageVm}">
        <local:UsersProfilePage />
    </DataTemplate>
</ResourceDictionary>
