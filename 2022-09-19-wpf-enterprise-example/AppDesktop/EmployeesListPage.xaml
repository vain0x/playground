<UserControl
    x:Class="AppDesktop.EmployeesListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AppDesktop"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:EmployeesListPageVm}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Employees}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="40" Binding="{Binding EmployeeId}" />
                <DataGridTextColumn Width="*" MaxWidth="200" Binding="{Binding EmployeeName}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Command="{Binding BackCommand}" Margin="16" HorizontalAlignment="Right">
            戻る
        </Button>
    </Grid>
</UserControl>
