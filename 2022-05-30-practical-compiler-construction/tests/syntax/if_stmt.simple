{
    void simple_if(int n) {
        sprint("  begin1");
        if (n == 0) {
            sprint("    n is zero.");
        }
        sprint("  end1");
    }

    void else_if(int n) {
        sprint("  begin2");
        if (n == 1) {
            sprint("    n is one.");
        } else {
            sprint("    n isn't one");
        }
        sprint("  end2");
    }

    sprint("simple_if");
    simple_if(0);
    simple_if(1);

    sprint("else_if");
    else_if(0);
    else_if(1);
}
